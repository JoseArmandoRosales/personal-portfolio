---
import Section from '@/components/Sections.astro'
import {work} from '@cv'
---

<Section title="Experiencia">
    <ul>
        {
            work.map(({name, position, startDate, endDate, summary}) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actualidad"
                const years = `${startYear} - ${endYear}`

                return (
                <li>
                    <article>
                        <header>
                            <h3> {name} </h3>
                            <time> {years} </time>
                        </header>
                        <footer>
                            <h4>{position}</h4>
                            <p> {summary} </p>
                        </footer>
                    </article>
                </li>
                )
            }
        )
        }
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    header{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        margin-bottom: 3px;
        align-items:flex-end;
    }

    header h3{
        color: #555;
    }
    footer h4{
        color: #666;
        
    }
    header time{
        color: #555;
        font-size: 0.9rem;
    }
    footer p{
        font-size: .9rem;
    }
</style>