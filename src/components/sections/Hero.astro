---
import {basics} from '@cv'
import Section from '@/components/Sections.astro'
import Mail from '@//icons/Mail.astro'
import Phone from '@//icons/Phone.astro'


const {name, label, image, email, phone, url, summary, location} = basics
const {city, region} = location

const SOCIAL_ICONS: Record<string, any> = {LinkedIn}
---


<Section title="About">
<section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>{city},{region}</span>
            <footer>
                {
                    email && (
                        <a 
                        href={`mailto:${email}`}
                        title={`Send email to ${name}`}
                        target="_blank"
                        rel="sampletext"
                        > <Mail /> 
                        </a>
                        
                    )
                }
                {
                    phone && (
                        <a 
                        href={`tel:${phone}`}
                        title={`Call to ${name} : ${phone}`}
                        target="_blank"
                        rel="sampletext"
                        > <Phone /> 
                        </a>
                                    
                        )
                }
                {
                    email && (
                        <a 
                        href={`mailto:${email}`}
                        title={`Send email to ${name}`}
                        target="_blank"
                        rel="sampletext"
                        > <Mail /> 
                        </a>
                                    
                        )
                }
            </footer>
        </div>



        <figure>
            <img src={image} alt={name}>
        </figure>
    </div>



</Section>

