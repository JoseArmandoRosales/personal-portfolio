---
import {basics} from '@cv'
import Section from '@/components/Sections.astro'
import Mail from '@//icons/Mail.astro'
import Phone from '@//icons/Phone.astro'
import LinkedIn from '@//icons/LinkedIn.astro'
import GitHub from '@//icons/GitHub.astro'
import WorldMap from '@//icons/WorldMap.astro'



const {name, label, image, email, phone, summary, location, profiles} = basics
const {city, region} = location

const SOCIAL_ICONS: Record<string, any> = {LinkedIn, GitHub}
---


<Section title="">
<section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <p>{summary}</p>
            <span class="ciudad"> <span><WorldMap/></span> <span> {city}, {region} </span> </span>
            <footer>
                {
                    email && (
                        <a 
                        href={`mailto:${email}`}
                        title={`Send email to ${name}`}
                        target="_blank"
                        rel="sampletext"
                        > <Mail /> {email}
                        </a>
                        
                    )
                }
                {
                    phone && (
                        <a 
                        href={`tel:${phone}`}
                        title={`Call to ${name} : ${phone}`}
                        target="_blank"
                        rel="sampletext"
                        > <Phone /> {phone}
                        </a>
                                    
                        )
                }
                
            </footer>
            <footer>
                {
                    profiles.map(({network, url, username}) =>{
                        const Icon = SOCIAL_ICONS[network]
                        return(
                            <a 
                            href={url}
                            title={`Visitar el perfil de ${name} en ${network}`}
                            target="_blank"
                            rel="Sample txt">                        
                            <span><Icon/></span> <span>{username}</span>
                            </a>
                        )
                    })
                }
            </footer>
        </div>

        <figure>
            <img src={image} alt={name}>
        </figure>
    </div>



</Section>

<style>
    .container{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        
    }
    .info{
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }
    .ciudad{
        font-size: .85rem;
        display: flex;
        flex-direction: row;
        gap: 5px;
    }
    h1{
        font-size: 2rem;
        margin: 0;
    }
    h2{
        color: #484848;
        font-weight: bold;
        font-size: 1.3rem;
        
    }
    p{
        text-wrap: pretty;
        font-size: .9rem;
    }
    img{
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 175px;
        border-radius: 50%;
        border: 1.5px solid;
    }
    footer{
        display: flex;
        flex-direction: row;
        gap: 5px;        
    }
    a{
        display: flex;
        flex-direction: row;
        gap: 5px;
        align-items: center;
        font-size: small;
        color: #8B5FBF;
        padding: 3px;
        border: 1.5px solid;
        border-radius: 5px;
  
    }
    a:hover{
        background-color: #E9E4ED;
        
    }
</style>