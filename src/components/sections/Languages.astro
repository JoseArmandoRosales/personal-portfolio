---
import Section from '@/components/Sections.astro'

import {languages} from '@cv'
---

<Section title="Idiomas">
    <ul>
        {
            languages.map(( {language,fluency}) => (
                <li>
                    <span>{language} - {fluency}</span>
                </li>
                )
            )
        }
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-wrap: wrap;
    }
    span{
        padding: .3rem;
        border: 1.5px solid #61398F;
        border-radius: 5px;
        color: white;
        background-color: #8B5FBF;
    }
    li{
        margin-right: 5px;
        margin-bottom: 17px;
    }
</style>