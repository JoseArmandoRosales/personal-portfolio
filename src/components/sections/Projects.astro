---
import Section from '@/components/Sections.astro'

import {projects} from '@cv'
---

<Section title="Projectos">

    <ul>
        {
            projects.map(({url, name, description, highlights}) => {

                return(
                    <li>
                        <article>
                            <header>
                                <a href={url}
                                   title=`Ver proyecto ${name}`
                                   target="_blank"
                                   > <h3>{name}</h3> 
                                </a>
                                <p>
                                    {description}
                                </p>
                            </header>
                            <footer>
                                {
                                    highlights.map((highlight) => {
                                        return(
                                            <li>{highlight}</li>
                                        )
                                    })
                                }
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>

</Section>

<style>
    ul{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    footer{
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    footer li{
        background-color: red;
        padding: 0.1rem;
    }
    li{
        border: 1.5px solid;
        padding: .5rem;
        border-radius: 5px;
    }
</style>